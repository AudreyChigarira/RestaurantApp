@{
    ViewBag.Title = "Welcome To My Page";
}


@*The enumerator will iterate through an array of strings*@

@model IEnumerable<string>

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/mystyles.css" rel="stylesheet" />

</head>

<body>
    <a href="#btn" textcolor="white">Scroll Down</a>
    <h4 class="bg-primary text-white text-center"> Here are my top 5 restaurants</h4>
    <br />
    <div class="text-center">
        <img src="~/img/food.jpeg" width="600" class="rounded" />
    </div>
    <br />

    @*The foreach entry in this model, loop through and list out the new entry.*@

    <div class="list-group">
        <ul>
            @foreach (string i in Model)
            {
                <li class="list-group-item">@i</li>
            }
        </ul>
    </div>

    <div class="text-center">
        <a class="btn btn-primary" id="btn" asp-action="AddRestaurant">Add your own restaurants</a>
    </div>


</body>
</html>