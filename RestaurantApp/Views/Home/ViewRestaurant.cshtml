@{
    ViewBag.Title = "Display Restaurants";
}

@model IEnumerable<RestaurantApp.Models.AddRestaurant>

<div class="text-center">
    <h2> Here are the restaurants added to your list!</h2>

    <table class="center">
        <thead>
            <tr>

                <th>Name</th>

                <th>Restaurant Name</th>

                <th>Favorite Dish</th>

                <th>Restaurant Phone Number</th>

                
            </tr>
        </thead>


        <tbody>

            @foreach(RestaurantApp.Models.AddRestaurant x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.ResName</td>
                    <td>@x.Dish</td>
                    <td>@x.RestaurantPhone</td>
                   

                </tr>
            }
        </tbody>
    </table>


</div>

<br />
<br />
<br />

<div class="text-center">
    <a class="btn btn-primary" asp-action="Index">Back to Homepage</a>
</div>
<br />
<br />
<div class="text-center">
    <a class="btn btn-primary" asp-action="AddRestaurant">Add a restaurant</a>
</div>








